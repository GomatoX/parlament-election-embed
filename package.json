{
  "private": true,
  "name": "lrt-election-addon",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --dest=public --no-sw --no-ssr --no-esm && npm run fix-index",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "fix-index": "sed -i.bak 's/src=\"/src=\"./g' public/index.html"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-synacor",
      "plugin:prettier/recommended"
    ]
  },
  "eslintIgnore": [
    "build/*",
    "public/*"
  ],
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-synacor": "^3.0.4",
    "node-sass": "^4.14.1",
    "preact-cli": "^3.0.0",
    "sass-loader": "^10.0.3",
    "sirv-cli": "^1.0.3"
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "normalize.css": "^8.0.1",
    "preact": "^10.1.0",
    "preact-render-to-string": "^5.1.2"
  }
}
